<div id="<%= dom_id comment %>">
  <div class="flex-start md:flex">
    <div
      class="-ml-[13px] flex h-[25px] w-[25px] items-start justify-center rounded-full bg-info-100 text-info-700">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="h-4 w-4">
        <path
          fill-rule="evenodd"
          d="M6.75 2.25A.75.75 0 017.5 3v1.5h9V3A.75.75 0 0118 3v1.5h.75a3 3 0 013 3v11.25a3 3 0 01-3 3H5.25a3 3 0 01-3-3V7.5a3 3 0 013-3H6V3a.75.75 0 01.75-.75zm13.5 9a1.5 1.5 0 00-1.5-1.5H5.25a1.5 1.5 0 00-1.5 1.5v7.5a1.5 1.5 0 001.5 1.5h13.5a1.5 1.5 0 001.5-1.5v-7.5z"
          clip-rule="evenodd" />
      </svg>
    </div>

    <div class="mb-2 flex flex-col">
      <p class="text-xs mb-2 text-info transition duration-150 ease-in-out hover:text-info-600 focus:text-info-600
        active:text-info-700">
        <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %>
      </p>
      <p class="mb-2 text-gray-700 text-xs dark:text-gray-200">
        <%= render(BadgeComponent.new(status: color_class(comment.project_status))) do
          comment.project_status.humanize
        end %>
      </p>
      <p class="mb-2 text-gray-700 text-xs dark:text-gray-200">
        <%= comment.user.email %>
      </p>
    </div >

    <div class="ml-2 mb-10 block max-w-md rounded-lg bg-gray-100 p-6 shadow-md shadow-black/5 dark:bg-gray-700
      dark:shadow-black/10">
      <p class="mb-3 text-gray-700 text-xs dark:text-gray-200">
        <%= comment.content %>
      </p>
      <div class='flex gap-1'>
        <%= link_to 'Edit comment', edit_project_comment_path(comment.project, comment),
                    class: "inline-block rounded border-2 border-info px-4 pt-[4px] pb-[3px] text-xs font-medium
        leading-normal text-info transition duration-150 ease-in-out hover:border-info-600 hover:bg-gray-500
        hover:bg-opacity-10 hover:text-info-600 focus:border-info-600 focus:text-info-600 focus:outline-none
        focus:ring-0 active:border-info-700 active:text-info-500 dark:hover:bg-gray-100 dark:hover:bg-opacity-10"
        %>

        <%= button_to 'Delete', project_comment_path(comment.project, comment), method: :delete,
                      class: "inline-block rounded border-2 border-info px-4 pt-[4px] pb-[3px] text-xs font-medium
        leading-normal text-info transition duration-150 ease-in-out hover:border-info-600 hover:bg-gray-500
        hover:bg-opacity-10 hover:text-info-600 focus:border-info-600 focus:text-info-600 focus:outline-none
        focus:ring-0 active:border-info-700 active:text-info-500 dark:hover:bg-gray-100 dark:hover:bg-opacity-10"
        %>
      </div>

    </div>
  </div>
</div>
